<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

    <ImageView
        android:id="@+id/app_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/music" />


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/back_transparent"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/ic_letter_m"
                    android:drawableStart="@drawable/ic_letter_m"
                    android:fontFamily="@font/music"
                    android:letterSpacing="0.1"
                    android:text=" Music"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabTextAppearance="@style/TabText" />
            </LinearLayout>


        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/noSong_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:fontFamily="@font/music"
        android:gravity="center"
        android:text="No songs found"
        android:textAlignment="center"
        android:textColor="@color/secondary_text"
        android:textSize="20sp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/music_load_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/colo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/v1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ff0000" />

        <View
            android:id="@+id/v2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00ff00" />

        <View
            android:id="@+id/v3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#0000ff" />

        <View
            android:id="@+id/v4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ff0000" />

        <View
            android:id="@+id/v5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00ff00" />

        <View
            android:id="@+id/v6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#0000ff" />

        <View
            android:id="@+id/v7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ff0000" />

        <View
            android:id="@+id/v8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00ff00" />

        <View
            android:id="@+id/v9"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#0000ff" />

        <View
            android:id="@+id/v10"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00ff00" />

        <View
            android:id="@+id/v11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#0000ff" />

        <View
            android:id="@+id/v12"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#ff0000" />

        <View
            android:id="@+id/v13"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00ff00" />

        <View
            android:id="@+id/v14"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#0000ff" />

        <View
            android:id="@+id/v15"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="#ff0000" />

        <View
            android:id="@+id/v16"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00ff00" />

        <View
            android:id="@+id/v17"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#0000ff" />

        <View
            android:id="@+id/v18"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#ff0000" />

    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_transparent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <RelativeLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <RelativeLayout
            android:id="@+id/miniLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/back_min"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/smallThumbnail"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-4dp"
                android:layout_marginTop="-6.5dp"
                android:layout_toEndOf="@id/smallThumbnail"
                android:backgroundTint="@color/colorPrimary"
                android:paddingTop="-4dp"
                android:progress="100"
                android:visibility="visible" />

            <TextView
                android:id="@+id/songTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/smallThumbnail"
                android:layout_toLeftOf="@+id/playConsole"
                android:layout_toRightOf="@+id/smallThumbnail"
                android:layout_toStartOf="@+id/playConsole"
                android:ellipsize="marquee"
                android:fontFamily="@font/music"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Titles"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/smallSongAartist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/songTitle"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/smallThumbnail"
                android:layout_toLeftOf="@+id/playConsole"
                android:layout_toRightOf="@+id/smallThumbnail"
                android:layout_toStartOf="@+id/playConsole"
                android:fontFamily="@font/music"
                android:maxLines="1"
                android:padding="0dp"
                android:text="Artist.........."
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/playConsole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp">

                <FrameLayout
                    android:id="@+id/previous_view_m"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_view">

                    <ImageButton
                        android:id="@+id/previous_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_back_small" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/play_view_m"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_view">

                    <ImageButton
                        android:id="@+id/play_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_play_button_small" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/next_view_m"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_view">

                    <ImageButton
                        android:id="@+id/next_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_next_small" />
                </FrameLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/maxLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/down_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@null"
                android:src="@drawable/ic_down_arrow" />

            <ImageView
                android:id="@+id/songThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/seekBar"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="90dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="90dp"
                android:scaleType="fitXY" />

            <android.support.v4.view.ViewPager
                android:id="@+id/playerPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/seekBar"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:id="@+id/pager_indicator"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_above="@+id/seekBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/w_indicator_one"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_5"
                    android:background="@drawable/selected_dot"
                    android:scaleX="2"
                    android:scaleY="2" />

                <ImageView
                    android:id="@+id/w_indicator_two"
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:background="@drawable/selected_dot"
                    android:scaleX="1"
                    android:scaleY="1" />

            </LinearLayout>


            <TextView
                android:layout_below="@id/down_arrow"
                android:id="@+id/songName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/music"
                android:gravity="center"
                android:text="Song name"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="marquee"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekBar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="00:00:00"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekBar"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="14dp"
                android:text="00:00:00"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:theme="@style/MySeekBarTheme" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/previous_view"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_view">

                        <ImageButton
                            android:id="@+id/previous"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_back" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/play_view"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/rounded_view">

                        <ImageButton
                            android:id="@+id/play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_play_button" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/next_view"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_view">

                        <ImageButton
                            android:id="@+id/next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_next" />
                    </FrameLayout>
                </LinearLayout>

                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#d08D9E91" />
-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/favorite_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:src="@drawable/ic_fav_emp" />

                    <ImageButton
                        android:id="@+id/repeat_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:src="@drawable/ic_repeat_disabled" />

                    <ImageButton
                        android:id="@+id/songList_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:src="@drawable/ic_song_playlist" />

                    <ImageButton
                        android:id="@+id/lyrics_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@null"
                        android:src="@drawable/ic_lyrics" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>

